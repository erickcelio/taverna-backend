{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "config/*": ["./src/config/*"],
      "models/*": ["./src/models/*"],
      "repository/*": ["./src/repository/*"],
      "resolvers/*": ["./src/resolvers/*"],
      "services/*": ["./src/services/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
